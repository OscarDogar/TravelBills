<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelBills.Prism.Views.MainPage"
             BackgroundColor="{StaticResource ColorBackground}"
             xmlns:busyindicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
             xmlns:i18n="clr-namespace:TravelBills.Prism.Helpers"
             Title="{Binding Title}">
    <AbsoluteLayout>
        <StackLayout AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All" 
                     Padding="10">
            <Image HeightRequest="150"
                   Margin="0,20,0,0"
                   Source="Bill"/>
            <Label TextColor="{StaticResource ColorFont}" FontSize="Large" HorizontalTextAlignment="Center" VerticalTextAlignment="Start" Text="{i18n:Translate Welcome}" />
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>